/ {
    chosen {
        zmk,kscan = &mock_kscan;
        zmk,matrix_transform = &default_transform;
        zephyr,display = &oled;
    };

    // physical_layout0: physical_layout_0 {
        //     compatible = "zmk,physical-layout";
        //     display-name = "Default Layout";
        //     transform = <&default_transform>;
    // };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;

        map = <
	    RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6)
	    RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6)
	    RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6)
					    RC(3,3) RC(3,4) RC(3,1)  RC(3,6)  RC(3,8)
        >;
    };

    mock_kscan: mock_kscan_0 {
        compatible = "zmk,kscan-mock";
        columns = <0>;
        rows = <0>;
        events = <0>;
    };
};

&trackball_listener {
    status = "okay";
};

&pro_micro_i2c {
    status = "okay";

    oled: ssd1106@3c {
        status = "okay";
        compatible = "sinowealth,sh1106";
        reg = <0x3c>;
        width = <128>;
        height = <64>;
        segment-offset = <2>;
        page-offset = <0>;
        display-offset = <0>;
        multiplex-ratio = <31>;
        segment-remap;
        com-invdir;
        com-sequential;
        inversion-on;
        prechargep = <0x22>;
    };
};

&pro_micro_spi {
        status = "okay";
        cs-gpios = <&pro_micro 15 GPIO_ACTIVE_LOW>;

        oled: ssd1106@3c {
            status = "okay";
            compatible = "sinowealth,sh1106";
            reg = <0>;
            spi-max-frequency = <8000000>;
            reset-gpios = <&gpio 2 GPIO_ACTIVE_LOW>;
            dc-gpios = <&gpio 26 GPIO_ACTIVE_LOW>;
            width = <128>;
            height = <64>;
            segment-offset = <2>;
            page-offset = <0>;
            display-offset = <0>;
            multiplex-ratio = <31>;
            segment-remap;
            com-invdir;
            com-sequential;
            inversion-on;
            prechargep = <0x22>;
        };

