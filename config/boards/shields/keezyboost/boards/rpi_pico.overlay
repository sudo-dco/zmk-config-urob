#include <dt-bindings/pinctrl/rpi-pico-rp2040-pinctrl.h>

/ {
    chosen {
        zephyr,display = &st7789v;
    };
}

&spi0 {
    // compatible = "raspberrypi,pico-spi", "arm,pl022";
	status = "okay";
	cs-gpios = <&gpio0 17 GPIO_ACTIVE_LOW>;
    pinctrl-0 = <&spi0_default>;
    pinctrl-names = "default";
};

pico_spi: &spi0 {};